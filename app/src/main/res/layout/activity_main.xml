<!-- Setup Overlay (shown during bootstrap in user mode) - AAA Professional Design -->
<FrameLayout
    android:id="@+id/setup_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true">

    <!-- Stage 1: Progress Screen (Environment Setup) -->
    <LinearLayout
        android:id="@+id/setup_progress_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- App Logo/Title -->
        <TextView
            android:id="@+id/setup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MobileCLI"
            android:textColor="#6750A4"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/setup_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI-Powered Terminal"
            android:textColor="#49454F"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <!-- Status Message -->
        <TextView
            android:id="@+id/setup_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting up your environment..."
            android:textColor="#1C1B1F"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/setup_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#6750A4"
            android:progressBackgroundTint="#E7E0EC"
            android:layout_marginBottom="16dp" />

        <!-- Percentage -->
        <TextView
            android:id="@+id/setup_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#6750A4"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Current Step -->
        <TextView
            android:id="@+id/setup_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#79747E"
            android:textSize="12sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Stage 2: AI Choice Screen - AAA Professional Design -->
    <ScrollView
        android:id="@+id/ai_choice_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your AI"
                android:textColor="#1C1B1F"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select an AI assistant to power your development"
                android:textColor="#49454F"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Claude Card - AAA Professional -->
            <LinearLayout
                android:id="@+id/ai_card_claude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ai_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Claude"
                        android:textColor="#6750A4"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RECOMMENDED"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:background="#6750A4"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="by Anthropic"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The most capable AI for coding. Builds entire apps, debugs complex issues, and writes production-quality code."
                    android:textColor="#49454F"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Gemini Card - AAA Professional -->
            <LinearLayout
                android:id="@+id/ai_card_gemini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ai_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gemini"
                    android:textColor="#4285F4"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="by Google"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google's multimodal AI. Great for research, documentation, and general development tasks."
                    android:textColor="#49454F"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Codex Card - AAA Professional -->
            <LinearLayout
                android:id="@+id/ai_card_codex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ai_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Codex"
                    android:textColor="#10A37F"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="by OpenAI"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OpenAI's code-focused model. Specializes in code completion and generation."
                    android:textColor="#49454F"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Basic Terminal Card - AAA Professional -->
            <LinearLayout
                android:id="@+id/ai_card_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ai_card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Basic Terminal"
                    android:textColor="#79747E"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skip AI for now"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Linux terminal without AI. You can install AI tools later from settings."
                    android:textColor="#49454F"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Hidden dev mode trigger (top-right corner) -->
    <View
        android:id="@+id/dev_mode_trigger"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|end" />

</FrameLayout>

</FrameLayout>
