<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000">

        <!-- Session tabs - shown when multiple sessions exist -->
        <HorizontalScrollView
            android:id="@+id/session_tabs_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111111"
            android:visibility="gone"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/session_tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />

        </HorizontalScrollView>

        <com.termux.view.TerminalView
            android:id="@+id/terminal_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- Extra keys row 1 - Main controls -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1a1a1a"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <Button
                    android:id="@+id/btn_esc"
                    style="@style/ExtraKeyButton"
                    android:text="ESC" />

                <Button
                    android:id="@+id/btn_ctrl"
                    style="@style/ExtraKeyButton"
                    android:text="CTRL" />

                <Button
                    android:id="@+id/btn_alt"
                    style="@style/ExtraKeyButton"
                    android:text="ALT" />

                <Button
                    android:id="@+id/btn_tab"
                    style="@style/ExtraKeyButton"
                    android:text="TAB" />

                <Button
                    android:id="@+id/btn_home"
                    style="@style/ExtraKeyButton"
                    android:text="HOME" />

                <Button
                    android:id="@+id/btn_up"
                    style="@style/ExtraKeyButton"
                    android:text="▲" />

                <Button
                    android:id="@+id/btn_end"
                    style="@style/ExtraKeyButton"
                    android:text="END" />

                <Button
                    android:id="@+id/btn_pgup"
                    style="@style/ExtraKeyButton"
                    android:text="PGUP" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Extra keys row 2 - Navigation and symbols -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1a1a1a"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <Button
                    android:id="@+id/btn_dash"
                    style="@style/ExtraKeyButton"
                    android:text="-" />

                <Button
                    android:id="@+id/btn_slash"
                    style="@style/ExtraKeyButton"
                    android:text="/" />

                <Button
                    android:id="@+id/btn_backslash"
                    style="@style/ExtraKeyButton"
                    android:text="\\" />

                <Button
                    android:id="@+id/btn_pipe"
                    style="@style/ExtraKeyButton"
                    android:text="|" />

                <Button
                    android:id="@+id/btn_left"
                    style="@style/ExtraKeyButton"
                    android:text="◀" />

                <Button
                    android:id="@+id/btn_down"
                    style="@style/ExtraKeyButton"
                    android:text="▼" />

                <Button
                    android:id="@+id/btn_right"
                    style="@style/ExtraKeyButton"
                    android:text="▶" />

                <Button
                    android:id="@+id/btn_pgdn"
                    style="@style/ExtraKeyButton"
                    android:text="PGDN" />

                <Button
                    android:id="@+id/btn_tilde"
                    style="@style/ExtraKeyButton"
                    android:text="~" />

                <Button
                    android:id="@+id/btn_underscore"
                    style="@style/ExtraKeyButton"
                    android:text="_" />

                <Button
                    android:id="@+id/btn_colon"
                    style="@style/ExtraKeyButton"
                    android:text=":" />

                <Button
                    android:id="@+id/btn_quote"
                    style="@style/ExtraKeyButton"
                    android:text="&quot;" />

                <Button
                    android:id="@+id/btn_more"
                    style="@style/ExtraKeyButton"
                    android:text="≡"
                    android:textSize="18sp" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <!-- Navigation drawer (swipe from left) -->
    <ScrollView
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1a1a1a"
